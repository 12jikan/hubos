{
  "name": "hubos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/react": "17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "typescript": "4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "prepare-commit-msg": "./.tools/git-commit-message.sh $HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "unicorn"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "next",
      "next/core-web-vitals"
    ],
    "rules": {
      "complexity": [
        "warn",
        5
      ],
      "import/no-anonymous--default-export": 0,
      "@typescript-eslint/ban-types": 0,
      "@typescript-eslint/explicit-module-boundary-types": [
        "error"
      ],
      "no-console": "warn",
      "unicorn/no-abusive-eslint-disable": "error",
      "unicorn//no-lonely-if": "error",
      "unicorn/no-instanceof-array": "error"
    }
  }
}
